<div style="background: url(../../images/bg9.jpg)" class="page-holder bg-cover">

<div class="login-form">
    <form action="/auth/login" method="POST">
        <h2 class="text-center">Login</h2>		       
        <div class="form-group">
        	<div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <input id="username" type="text" class="form-control" name="username" placeholder="Username" value="anna" required="required">
                {{!-- <input id="username" type="text" class="form-control" name="username" placeholder="Username" required="required"> --}}
            </div>
        </div>
		    <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <input id="password" type="password" class="form-control" name="password" placeholder="Password" value="anna" required="required">
                {{!-- <input type="password" class="form-control" name="password" placeholder="Password" required="required"> --}}
            </div>
        </div>      
        <br>
          {{#if message }}
            <div class="error-message">{{ message }}</div>
          {{/if}}
        <br>  
        <div class="form-group">
          
            <button type="submit" class="btn btn-success btn-block login-btn">Login</button>
        </div>
    </form>
    <div class="hint-text small">Don't have an account? <a href="/auth/signup" class="text-success">Sign Up Now!</a></div>
</div>


