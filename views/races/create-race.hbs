<form class='form-race' method="POST" action="/races/new" enctype="multipart/form-data" id="addraceform">
  <div class="form-container">
    <h2>Add Race</h2>
    <div class="form-group row">

      <label for="text3" class="col-4 col-form-label">Race name</label>
      <div class="col-8">
        <input id="text3" name="name" type="text" class="form-control" placeholder="Your race name">
      </div>
    </div>
    <div class="form-group row">
      <label for="description" class="col-4 col-form-label">Description</label>
      <div class="col-8">
        <textarea id="description" name="description" placeholder="Enter race description" cols="40" rows="3"
          class="form-control"></textarea>
      </div>
    </div>

    <div class="form-group row">
      <label for="length" class="col-4 col-form-label">Distance</label>
      <div class="col-8">
        <input id="length" name="length" type="text" class="form-control" placeholder="Enter race distance in meters">
      </div>
    </div>
    <div class="form-group row">
      <label for="select1" class="col-4 col-form-label">Difficulty</label>
      <div class="col-8">
        <select id="select-difficulty" name="difficulty" class="custom-select">
          <option value="Easy">Easy</option>
          <option value="Medium">Medium</option>
          <option value="Hard">Hard</option>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <label for="select-area" class="col-4 col-form-label">Area</label>
      <div class="col-8">
        <select id="select-area" name="area" class="custom-select">
          <option value="MadridRio">Madrid R√≠o</option>
          <option value="CasaDeCampo">Casa de Campo</option>
        </select>
      </div>
    </div>
    <div class="form-group row coordinates">
      <label for="lat" class="col-4 col-form-label">Coordinates</label>
      <div class="col-8">
        <input id="lat" name="lat" value="40.42161" type="text" class="form-control" size="50">
        <input id="lng" name="lng" value="-3.75664" type="text" class="form-control" size="50">
      </div>
    </div>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroupFileAddon01">Upload Race Photo</span>
      </div>
      <div class="custom-file">
        <input type="file" name="imgUrl" class="custom-file-input" id="inputGroupFile01"
          aria-describedby="inputGroupFileAddon01">
        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
      </div>
    </div>
    <br>
    <div class="form-group row">
      <div class="offset-4 col-8">
        <button name="submit" type="submit" class="btn btn-primary">Create Race</button>
      </div>
    </div>
  </div>

  <div class="map-container">
    <p class="map-indications">Drag and drop üìç the marker to set the race start points and route points</p>
    <div id="map-detail"></div>
  </div>


</form>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/createRaceMap.js"></script>

