<form class='form-race' method="POST" action="/races/edit/{{_id}}" enctype="multipart/form-data" id="editraceform">
  <div class="form-container">
    <h2>Edit Race</h2>
    <div class="form-group row">
      <label for="text3" class="col-4 col-form-label">Race name</label>
      <div class="col-8">
        <input id="text3" name="name" type="text" class="form-control" placeholder="Your race name" value="{{name}}">
      </div>
    </div>

    <div class="form-group row">
      <label for="description" class="col-4 col-form-label">Description</label>
      <div class="col-8">
        <input id="description" name="description" placeholder="{{description}}" value="{{description}}"
          class="form-control">
      </div>
    </div>

    <div class="form-group row">
      <label for="length" class="col-4 col-form-label">Distance</label>
      <div class="col-8">
        <input id="length" name="length" type="text" class="form-control" placeholder="{{length}}" value="{{length}}">
      </div>
    </div>

    <div class="form-group row">
      <label for="select1" class="col-4 col-form-label">Difficulty</label>
      <div class="col-8">
        <select id="select-difficulty" name="difficulty" class="custom-select">
          <option value="Easy">Easy</option>
          <option value="Medium">Medium</option>
          <option value="Hard">Hard</option>
        </select>
      </div>
    </div>

    <div class="form-group row">
      <label for="select-area" class="col-4 col-form-label">Area</label>
      <div class="col-8">
        <select id="select-area" name="area" class="custom-select">
          <option value="MadridRio">Madrid R√≠o</option>
          <option value="CasaDeCampo">Casa de Campo</option>
        </select>
      </div>
    </div>

    <div class="form-group row">
      <label for="lat" class="col-4 col-form-label">Coordinates</label>
      <div class="col-8">
        <input id="lat" name="lat" value="{{lat}}" type="text" class="form-control" size="50">
        <input id="lng" name="lng" value="{{lng}}" type="text" class="form-control" size="50">
      </div>
    </div>

    <div class="input-group">
      <h3>Your race image </h3>
      <div id="change-img"><img src="{{imgUrl}}"></div>
      <h5>Change Race Photo</h5>

      <input type="file" name="imgUrl">
      <input type="hidden" name="previousImgUrl" value={{imgUrl}}>
    </div>


    <div class="form-group row button-submit">
        <button name="submit" class="btn btn-primary">Update</button>
    </div>
  </div>

  <div class="map-container">
    <p class="map-indications">Drag and drop üìç the marker to set the race start points and route points</p>
    <div id="map-detail"></div>
  </div>
</form>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/editRaceMap.js"></script>
<script
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVldv6to51T5LpyubZPhnS-qOTsKu__CY&callback=initEditRaceMap"></script>