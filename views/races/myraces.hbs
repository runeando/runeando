
​
<h2>My Races</h2>
​
<div id="card-container">
  {{#each races}}
  <div class="card" style="width: 18rem;">
    <img src="{{imgUrl}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">{{name}}</h5>
      <h6 class="card-subtitle mb-2 text-muted">{{area}} | {{difficulty}} | {{length}}m</h6>
      <p class="card-text">{{description}}</p>
      {{!-- <a href="/races/{{_id}}" class="btn btn-primary">Edit Race</a> --}}
      <a href="/races/edit/{{_id}}" class="btn btn-primary">Edit Race</a>
      <form action="/races/delete/{{_id}}" method="POST">
        <button class="btn btn-primary">Delete Race</button>
      </form>
      ​
    </div>
  </div>
  {{/each}}
</div>